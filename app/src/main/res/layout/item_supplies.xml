<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/brown_card2"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/txt_supplies_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplies Name"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_supplies_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplies Color"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_supplies_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/txt_supplies_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplies Price"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_supplies_color"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        />

    <ImageView
        android:id="@+id/icon_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_add_shopping_cart_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>